.panel-wrap {
  position: absolute;
  left: 730px;
  top: 10px;
  width: 640px;

  .mod-panel {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 20px;

    .inp {
      padding: 5px;
      width: 39%;
      border-radius 3px;
      border: 1px solid #ccc;
      height: 20px;
      outline:none;
      margin:0 1% 0 0;
    }

    .btn {
      width: 14%;
      border-radius 3px;
      background-color: #06c;
      height: 30px;
      line-height:28px;
      border: 0 none;
      color: #fff;
      cursor: pointer;
      outline: none;
    }
  }

  .btn-group {
    margin:20px 0 0

    .btn {
      display: inline-block;
      margin: 0 12px 0 0
      background-color: #e5e5e5
      font-size:14px;
      padding:4px;
      border-radius: 3px;
      cursor: pointer
      transition: all ease .3s;

      &.active,
      &:hover {
        background-color: #5f86bd;
        color: #fff;
      }
    }

    .more {
      font-size:12px;
    }
  }
}

