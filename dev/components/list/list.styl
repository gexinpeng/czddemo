.list-wrap {
  .mod-list {
    margin: 20px 0 0;
    border-top: 1px solid #ccc;
    padding-top: 12px;
  }

  .pagination {
    display: inline-block;
    padding-left: 0;
    border-radius: 4px;
    font-size: 12px
    float: right;

    > li {
      float: left
      display: inline;

      > a,
      > span {
        position: relative;
        float: left;
        padding: 4px 8px;
        margin-left: -1px;
        line-height: 16px;
        color: #337ab7;
        text-decoration: none;
        background-color: #fff;
        border: 1px solid #ddd;
      }

      > a:hover,
      > span:hover,
      > a:focus,
      > span:focus {
        z-index: 2;
        color: #23527c;
        background-color: #eee;
        border-color: #ddd;
      }
    }

    .previous a {
      margin-left: 0;
      border-top-left-radius: 4px;
      border-bottom-left-radius: 4px;
    }

    .next a {
      border-top-right-radius: 4px;
      border-bottom-right-radius: 4px;
    }

    > .active {
      > a,
      > span,
      > a:hover,
      > span:hover
      > a:focus,
      > span:focus {
        z-index: 3;
        color: #fff;
        cursor: default;
        background-color: #337ab7;
        border-color: #337ab7;
      }
    }

    > .disabled {
      > span,
      > span:hover,
      > span:focus,
      > a,
      > a:hover,
      > a:focus {
        color: #777;
        cursor: not-allowed;
        background-color: #fff;
        border-color: #ddd;
      }
    }
  }

  .mod-article {
    background-color: #fff
    margin:-36px 0 0
    position: relative
  }

  .line {
    transition: all ease .3s;
    border-radius 5px;
    padding: 8px;
    cursor: default;
    position: relative;

    &:hover {
      background-color: #e5e5e5;

      .insert {
        opacity: 1;
      }
    }

    .info {
      font-size: 12px;

      .wenhao {
        margin: 0 30px 0 0;
      }
    }

    .title {
      font-size: 14px;
      text-decoration: none;
      display: block;
      margin: 4px 0 0;
      color: #5f86bd
      font-weight: bold

      &:hover {
        text-decoration: underline;
      }
    }

    .para {
      margin:0
    }
  }

  .insert{
    position: absolute
    right: 8px;
    bottom: 8px;
    width: 40px;
    height: 18px
    line-height: 18px;
    background-color: #06c;
    color: #fff;
    cursor: pointer;
    border-radius: 3px;
    font-size: 12px;
    text-align: center;
    opacity: 0;
    transition: all ease .3s;
  }
}
