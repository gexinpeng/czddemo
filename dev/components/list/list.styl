.mod-list {
  margin:20px 0 0;
  border-top: 1px solid #ccc;
  padding-top: 12px;

  .line {
    transition: all ease .3s;
    border-radius 5px;
    padding:8px;
    cursor: default;
    position: relative;

    &:hover {
      background-color: #e5e5e5;

      .insert {
        opacity: 1;
      }
    }

    .info {
      font-size:12px;

      .wenhao {
        margin:0 30px 0 0;
      }
    }

    .title {
      font-size:14px;
      text-decoration: none;
      display: block;
      margin: 4px 0 0;
      color: #5f86bd
      font-weight: bold

      &:hover {
        text-decoration: underline;
      }
    }

    .insert {
      position: absolute
      right:8px;
      bottom:8px;
      width:40px;
      height: 18px
      line-height: 18px;
      background-color: #06c;
      color: #fff;
      cursor: pointer;
      border-radius: 3px;
      font-size:12px;
      text-align: center;
      opacity:0;
      transition: all ease .3s;
    }
  }
}